{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": 0,
    "no-console": 0,
    "no-mixed-operators": ["error", {
      "allowSamePrecedence": true
    }],
    "no-new": 0,
    "no-param-reassign": ["error", {
      "props": true,
      "ignorePropertyModificationsFor": ["state"]
    }],
    "arrow-parens": [2, "as-needed"],
    "eqeqeq": 0,
    "indent": [2, "tab"],
    "no-tabs": 0,
    "no-underscore-dangle": 0,
    "max-len": ["error", {
      "code": 140
    }]
  },
  "env": {
    "browser": true,
    "es6": true
   }
}